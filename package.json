{
  "name": "make-capacitor-key-sdk",
  "version": "1.0.1",
  "description": "Capacitor蓝牙钥匙SDK，用于与蓝牙钥匙设备通讯",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "node scripts/verify-external-deps.js",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "capacitor",
    "bluetooth",
    "key",
    "sdk",
    "iot",
    "mobile"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@capacitor/core": "^7.0.0",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@capacitor-community/bluetooth-le": "^7.1.1",
    "@capacitor/cli": "^7.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@capacitor-community/bluetooth-le": "^7.1.1",
    "@capacitor/core": "^7.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yorkzero/make-capacitor-key-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/Yorkzero/make-capacitor-key-sdk/issues"
  },
  "homepage": "https://github.com/Yorkzero/make-capacitor-key-sdk#readme"
}
